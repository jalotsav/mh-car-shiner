<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- AppTheme NoActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppTheme NoActionBar Fullscreen -->
    <style name="AppTheme.NoActionBar.Fullscreen">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- AppTheme NoActionBar Translucent StatusBar -->
    <style name="AppTheme.NoActionBar.TranslucentStatus">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- AppTheme Background & Button Style -->
    <style name="AppTheme.NoActionBar.BGStyle">
        <item name="android:windowBackground">@drawable/drwbl_gradiant_bluedark</item>
    </style>

    <!-- AppTheme Navigation NoActionBar Style -->
    <style name="AppTheme.NavigationNoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="AppTheme.AppBarOverlayLight" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlayActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- AppTheme Dark -->
    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/white</item>
    </style>

    <!-- AppThemeDark NoActionBar -->
    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppThemeDark Background & Button Style -->
    <style name="AppThemeDark.NoActionBar.BGStyle">
        <item name="android:windowBackground">@drawable/drwbl_gradiant_bluedark</item>
    </style>

    <!--Material Design Theme-->
    <style name="MDTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <!--Material Theme BlueMidnight + Blue-->
    <style name="MDTheme.BlueMdnghtBlue">
        <item name="colorPrimary">@color/colorPrimaryBlueMidnight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlueMidnight</item>
        <item name="colorAccent">@color/colorPrimaryBlue</item>
        <item name="colorButtonNormal">@color/colorPrimaryBlue</item>
    </style>

    <!--Material Theme Blue + Orange-->
    <style name="MDTheme.BlueOrange">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryOrange</item>
        <item name="colorButtonNormal">@color/colorPrimaryOrange</item>
    </style>

    <!-- MDTheme NoActionBar -->
    <style name="MDTheme.BlueOrange.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--ColorAccent Amber style-->
    <style name="ColorAccentAmber">
        <item name="colorAccent">@color/colorPrimaryAmber</item>
    </style>

    <!--Material Style Button Theme - AMBER -->
    <style name="MaterialButton.Amber" parent="Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/ColorAccentAmber</item>
    </style>

    <!--Material Style EditText Theme - AMBER -->
    <style name="MaterialText.Amber" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryAmber</item>
        <item name="android:textSize">@dimen/_14jdp</item>
    </style>

    <!--Material Design Theme Light Dialog-->
    <style name="MDTheme.Light.Dialog" parent="Theme.AppCompat.Light.Dialog" />

</resources>
