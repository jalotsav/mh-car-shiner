<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cordntrlyot_frgmnt_contactus"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_264jdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_192jdp"
                    android:layout_marginBottom="@dimen/_40jdp"
                    android:contentDescription="@string/imgcd_image"
                    android:paddingTop="@dimen/_8jdp"
                    app:srcCompat="@drawable/ic_undraw_instant_support" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_64jdp"
                    android:paddingLeft="@dimen/_24jdp"
                    android:paddingRight="@dimen/_24jdp"
                    android:weightSum="2">

                    <!--START Email-->
                    <LinearLayout
                        android:id="@+id/lnrlyot_frgmmt_contactus_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20jdp"
                            android:layout_height="@dimen/_20jdp"
                            android:contentDescription="@string/imgcd_image"
                            android:tint="@color/whiteDialogBg"
                            app:srcCompat="@drawable/ic_email_black_24dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_8jdp"
                            android:layout_marginLeft="@dimen/_8jdp"
                            android:layout_marginRight="@dimen/_8jdp"
                            android:layout_marginStart="@dimen/_8jdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email_sml"
                                android:textColor="@color/whiteDialogBg"
                                android:textSize="@dimen/_12jdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5jdp"
                                android:text="@string/contact_email_sml"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12jdp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--END Email-->

                    <!--START Mobile-->
                    <LinearLayout
                        android:id="@+id/lnrlyot_frgmmt_contactus_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20jdp"
                            android:layout_height="@dimen/_20jdp"
                            android:contentDescription="@string/imgcd_image"
                            android:tint="@color/whiteDialogBg"
                            app:srcCompat="@drawable/ic_call_black_24dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_8jdp"
                            android:layout_marginLeft="@dimen/_8jdp"
                            android:layout_marginRight="@dimen/_8jdp"
                            android:layout_marginStart="@dimen/_8jdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mobile_sml"
                                android:textColor="@color/whiteDialogBg"
                                android:textSize="@dimen/_12jdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5jdp"
                                android:text="@string/contact_mobileno_sml"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12jdp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--END Mobile-->
                </LinearLayout>
            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_32jdp"
        app:behavior_overlapTop="@dimen/_56jdp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_8jdp">

            <!--START Car Details-->
            <android.support.v7.widget.CardView
                android:id="@+id/cardvw_frgmmt_contactus_getintouch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8jdp"
                cardview:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16jdp"
                    android:layout_marginRight="@dimen/_16jdp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_48jdp"
                    android:paddingTop="@dimen/_5jdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_16jdp"
                        android:layout_marginTop="@dimen/_16jdp"
                        android:fontFamily="@font/rubik_light"
                        android:text="@string/get_in_touch_sml"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20jdp"
                        android:textStyle="bold" />

                    <!--Subject-->
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txtinputlyot_frgmnt_contactus_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtinptet_frgmnt_contactus_subject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/subject_sml"
                            android:inputType="text"
                            android:textColorHint="@color/grayA8"
                            android:textSize="@dimen/_14jdp" />
                    </android.support.design.widget.TextInputLayout>

                    <!--Message-->
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txtinputlyot_frgmnt_contactus_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10jdp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtinptet_frgmnt_contactus_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:hint="@string/message_sml"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:textColorHint="@color/grayA8"
                            android:textSize="@dimen/_14jdp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <!--Save FAB Button-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_frgmnt_contactus_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8jdp"
        android:layout_marginEnd="@dimen/_32jdp"
        android:layout_marginRight="@dimen/_32jdp"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:fabSize="normal"
        app:layout_anchor="@id/cardvw_frgmmt_contactus_getintouch"
        app:layout_anchorGravity="center|bottom"
        app:srcCompat="@drawable/ic_paper_plane" />

    <ProgressBar
        android:id="@+id/prgrsbr_frgmnt_contactus"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</android.support.design.widget.CoordinatorLayout>