<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170jdp"
    android:background="@drawable/drwbl_gradiant_bluedark"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackTrsprnt80"
        android:orientation="vertical"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Profile Details-->
        <LinearLayout
            android:id="@+id/lnrlyot_drwrlyot_header_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_5jdp"
            android:paddingLeft="@dimen/_16jdp"
            android:paddingRight="@dimen/_16jdp"
            android:paddingTop="@dimen/_2jdp">

            <TextView
                android:id="@+id/tv_drwrlyot_header_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_14jdp" />

            <TextView
                android:id="@+id/tv_drwrlyot_header_emailmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_12jdp"
                tools:text="+911234567890" />
        </LinearLayout>

        <!--Logo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/lnrlyot_drwrlyot_header_profile"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_56jdp"
                android:layout_height="@dimen/_56jdp"
                android:layout_marginTop="@dimen/_5jdp"
                android:contentDescription="@string/imgcd_image"
                android:src="@drawable/ic_logo_round_castshadow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_14jdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/make_your_carshine_everyday"
                android:textColor="@color/white"
                android:textSize="@dimen/_10jdp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>